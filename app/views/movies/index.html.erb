<p id="notice"><%= notice %></p>

<h1>
  <i class="fa fa-video-camera"></i> Listing Movies
</h1>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Year</th>
      <th>Synopsis</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |movie| %>
      <tr>
        <td><%= link_to movie.title, movie %></td>
        <td><%= movie.year %></td>
        <td><%= movie.synopsis %></td>
        <td><%= link_to '<i class="fa fa-edit"></i> Edit'.html_safe, edit_movie_path(movie), class: 'btn btn-primary' %></td>
        <td><%= link_to '<i class="fa fa-trash"></i> Destroy'.html_safe, movie, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '<i class="fa fa-magic"></i> New Movie'.html_safe, new_movie_path, class: 'btn btn-primary' %>