<h1>
  Knwon Movies
  <span class="pull-right">
    <%= link_to 'Add a New Movie', new_movie_path, class: 'btn btn-primary' %>
  </span>
</h1>

<hr>

<table class="table table-bordered table-striped table-hover table-responsive table-condensed">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Year
      </th>
      <th colspan="3" class="text-center">
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    <% @movies.each do |m| %>
      <tr>
        <td>
          <%= m.title %>
        </td>
        <td>
          <%= m.year %>
        </td>
        <td>
          <%= link_to 'Show', movie_path(m) %>
        </td>
        <td>
          <%= link_to 'Edit', edit_movie_path(m) %>
        </td>
        <td>
          <%= link_to 'Delete', movie_path(m), method: :delete, data: {confirm: 'Are you sure?'} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>