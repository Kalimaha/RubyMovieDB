<div class="row">
  <div class="col-xs-6">
    <h1>
      <i class="fa fa-video-camera"></i> Known Directors
    </h1>
  </div>
  <div class="col-xs-6">
    <h1 class="pull-right">
     <%= link_to '<i class="fa fa-magic"></i> Add a New Director'.html_safe, new_director_path, class: 'btn btn-primary' %>
    </h1>
  </div>
</div>

<hr>

<table class="table table-bordered table-hover table-responsive table-condensed">
  <thead>
  <tr>
    <th>
      First Name
    </th>
    <th>
      Last Name
    </th>
    <th>
      Birthday
    </th>
    <th>
      Country
    </th>
  </tr>
  </thead>
  <tbody>
  <% @directors.each do |a| %>
      <tr>
        <td>
          <%= a.first_name %>
        </td>
        <td>
          <%= a.last_name %>
        </td>
        <td>
          <%= a.birthday.strftime('%d %b %Y') %>
        </td>
        <td>
          <%= a.country %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>

<hr>

<%= link_to '<i class="fa fa-arrow-left"></i> Back to the List of Movies'.html_safe, movies_path %>
