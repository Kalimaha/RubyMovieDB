<h1>
  Known Directors
</h1>

<hr>

<table class="table table-bordered table-striped table-hover table-responsive table-condensed">
  <thead>
  <tr>
    <th>
      First Name
    </th>
    <th>
      Last Name
    </th>
    <th>
      Birthday
    </th>
    <th>
      Country
    </th>
  </tr>
  </thead>
  <tbody>
  <% @directors.each do |a| %>
      <tr>
        <td>
          <%= a.first_name %>
        </td>
        <td>
          <%= a.last_name %>
        </td>
        <td>
          <%= a.birthday.strftime('%d %b %Y') %>
        </td>
        <td>
          <%= a.country %>
        </td>
      </tr>
  <% end %>
  </tbody>
</table>